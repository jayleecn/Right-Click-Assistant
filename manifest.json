{
  "manifest_version": 3,
  "name": "右键助手",
  "version": "1.0.0",
  "description": "强大的右键菜单增强工具，支持邮件发送、文本处理等多种功能",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {},
  "minimum_chrome_version": "88"
}
